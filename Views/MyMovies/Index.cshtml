@using MovieStore.Models.Movie
@model List<Movie>


<h1>My reservations</h1>


@if (Model != null && Model.Count > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>Poster</th>
                <th>Title</th>
                <th>Synopsis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Movie movie in Model)
            {
                <tr>
                    <td style="width: 50%; float: left;">
                        <img src="@movie.PosterPath.Replace("w500","w154")" class="detailImage" />
                    </td>
                    @if (movie.OriginalLanguage != "en")
                    {
                        <td><b>@(movie.Title + " (" + movie.ReleaseDate.Year  + ") " + movie.OriginalTitle)</b></td>
                    }
                    else
                    {
                        <td><b>@(movie.Title + " (" + movie.ReleaseDate.Year + ") " )</b></td>
                    }

                    <td>@movie.Synopsis</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>You have no movies currently reserved, would you like to search for some.</em></p>
    <td>@Html.ActionLink("Info", "Index", "Movie")</td>
}